<!DOCTYPE database SYSTEM
 "http://db.apache.org/torque/dtd/database_3_3.dtd">

<database
  name="gestion"
  defaultIdMethod="native">

     <table name="etudiant" description="Table des etudiant">
        <column
      name="etudiant_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="etudiant Id"/>
      <column
      name="nom"
      required="true"
      type="VARCHAR"
      size="128"
      description="nom de l'etudiant"/>
      <column
      name="prenom"
      required="true"
      type="VARCHAR"
      size="128"
      description="prenom de l'etudiant"/>
     </table>

     <table name="absence" description="Table des absences">
        <column
      name="absence_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="absence Id"/>
        <column
      name="dateDebut"
      required="true"
      type="TIMESTAMP"
      description="Date de debut"/>
      <column
      name="dateFin"
      required="true"
      type="TIMESTAMP"
      description="Date de fin"/>
      <column
      name="motif"
      required="true"
      type="VARCHAR"
      size="128"
      description="motif d'absence"/>
      <column
      name="etudiant_id"
      required="true"
      type="INTEGER"
      description="etudiant id"/>
      <foreign-key foreignTable="etudiant">
      <reference
        local="etudiant_id"
        foreign="etudiant_id"/>
      </foreign-key>
    </table>
    <table name="matiere" description="Table des matieres">
        <column
      name="matiere_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="matiere Id"/>
      <column
      name="nom"
      required="true"
      type="VARCHAR"
      size="128"
      description="nom de la matiere"/>
      <column
      name="description"
      required="true"
      type="VARCHAR"
      size="128"
      description="Description de la matiere"/>
      <column
      name="prof"
      required="true"
      type="VARCHAR"
      size="128"
      description="nom du prof"/>
     </table>

    <table name="classe" description="Table des classes">
          <column
      name="classe_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="classe Id"/>
        <column
      name="nom"
      required="true"
      type="VARCHAR"
      size="255"
      description="nom de la classe"/>
       <column
      name="etudiant_id"
      required="true"
      type="INTEGER"
      description="etudiant id"/>
       <column
      name="matiere_id"
      required="true"
      type="INTEGER"
      description="matiere id"/>
      <foreign-key foreignTable="etudiant">
      <reference
        local="etudiant_id"
        foreign="etudiant_id"/>
      </foreign-key>
      <foreign-key foreignTable="matiere">
      <reference
        local="matiere_id"
        foreign="matiere_id"/>
      </foreign-key>
    </table>
    <table name="note" description="Table des notes">
        <column
      name="note_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="note Id"/>
        <column
      name="note"
      required="true"
      type="FLOAT"
      description="note"/>
    </table>
    <table name="controle" description="Table des controles">
        <column
      name="controle_id"
      required="true"
      primaryKey="true"
      type="INTEGER"
      description="Controle Id"/>
        <column
      name="coef"
      required="true"
      type="INTEGER"
      description="coefficient"/>
      <column
      name="date"
      required="true"
      type="TIMESTAMP"
      description="date du controle"/>
        <column
      name="matiere_id"
      required="true"
      type="INTEGER"
      description="Matiere id"/>
        <column
      name="note_id"
      required="true"
      type="INTEGER"
      description="note id"/>
      <foreign-key foreignTable="matiere">
      <reference
        local="matiere_id"
        foreign="matiere_id"/>
      </foreign-key>
      <foreign-key foreignTable="note">
      <reference
        local="note_id"
        foreign="note_id"/>
      </foreign-key>
    </table> 
</database>
